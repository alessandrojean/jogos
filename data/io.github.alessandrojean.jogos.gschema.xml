<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="jogos">
	<schema id="io.github.alessandrojean.jogos" path="/io/github/alessandrojean/jogos/">
    <key name="window-size" type="ai">
      <default>[]</default>
      <summary>Window size</summary>
      <description>Window size (width and height).</description>
    </key>
    <key name="window-position" type="ai">
      <default>[]</default>
      <summary>Window position</summary>
      <description>Window position (X and Y).</description>
    </key>
    <key name="window-maximized" type="b">
      <default>false</default>
      <summary>Window maximized</summary>
      <description>Window maximization state</description>
    </key>
    <key name="last-sidebar-item" type="s">
      <default>'ALL_GAMES'</default>
      <summary>Last sidebar item open</summary>
      <description>The last sidebar item opened by the user</description>
    </key>
    <key name="show-grid" type="b">
      <default>true</default>
      <summary>Show grid view</summary>
      <description>Grid view state</description>
    </key>
    <key name="use-system-locale" type="b">
      <default>true</default>
      <summary>Use system locale options</summary>
      <description>If enabled, will use Unix locale for date, time and monetary</description>
    </key>
    <key name="preferred-currency" type="s">
      <default>'USD'</default>
      <summary>Preferred currency</summary>
      <description>The preferred currency for the games</description>
    </key>
    <key name="date-format" type="s">
      <default>'dd/mm/yyyy'</default>
      <summary>Date format</summary>
      <description>The date format</description>
    </key>
    <key name="use-24-hour-clock" type="b">
      <default>true</default>
      <summary>Use 24-hour clock</summary>
      <description>Wether to use 12 or 24-hour clock</description>
    </key>
    <key name="igdb-active" type="b">
      <default>false</default>
      <summary>Enable IGDB integration</summary>
      <description>If the IGDB integration is active</description>
    </key>
    <key name="igdb-client-id" type="s">
      <default>''</default>
      <summary>IGDB Client ID</summary>
      <description>The Twitch Application Client ID to the IGDB integration</description>
    </key>
    <key name="igdb-client-secret" type="s">
      <default>''</default>
      <summary>IGDB Client Secret</summary>
      <description>The Twitch Application Client Secret to the IGDB integration</description>
    </key>
    <key name="igdb-access-token" type="s">
      <default>''</default>
      <summary>IGDB Access Token</summary>
      <description>The IGDB granted access token</description>
    </key>
    <key name="igdb-access-token-expiration" type="i">
      <default>0</default>
      <summary>IGDB Access Token Expiration</summary>
      <description>The Epoch local date time of the access token expiration</description>
    </key>
    <key name="database-version" type="i">
      <default>1</default>
      <summary>The database version for migrations</summary>
    </key>
	</schema>
</schemalist>
